<%- include('header') %>
  
  <div class="container">
  <div class="row">
    <div class="col-xl-4">
      
    </div>
    <div class="col-xl-4">
		<h1>Tesla-nevelede</h1>
		<% if(typeof error !== 'undefined'){ %>
			<div class="alert alert-danger"><%= error %></div>
		<% } %>
		<form method="POST">
			<div class="form-group">
				<label for="emailInput">Email cím</label>
				<input type="email" class="form-control" id="emailInput" name="email">
			</div>
			<div class="form-group">
				<label for="passwordInput">Jelszó</label>
				<input type="password" class="form-control" id="passwordInput" name="password">
			</div>
			<div>
				<input type="submit" class="btn btn-primary" value="Belépés"/>
				<a href="/regisztracio" class="btn btn-primary">Regisztráció</a>
			</div>
		</form>
      
    </div>
    <div class="col-xl-4">
      
    </div>
  </div>
</div>
  
<%- include('footer') %>
